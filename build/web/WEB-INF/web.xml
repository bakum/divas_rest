<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <description>Multiple packages, separated by semicolon(;), can be specified in param-value</description>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>ua.divas.restful.service;service</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/restful/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Security</display-name>
        <web-resource-collection>
            <web-resource-name>Orders</web-resource-name>
            <description/>
            <url-pattern>/identity/orders/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Kontragents</web-resource-name>
            <description/>
            <url-pattern>/identity/kontragents/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Divisions</web-resource-name>
            <description/>
            <url-pattern>/identity/divisions/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Kassa</web-resource-name>
            <description/>
            <url-pattern>/identity/kassa/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Price</web-resource-name>
            <description/>
            <url-pattern>/identity/price/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Nomenklatura</web-resource-name>
            <description/>
            <url-pattern>/identity/nomenklatura/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Status</web-resource-name>
            <description/>
            <url-pattern>/identity/status/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Oplaty</web-resource-name>
            <description/>
            <url-pattern>/identity/oplaty/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Uslugi</web-resource-name>
            <description/>
            <url-pattern>/identity/uslugi/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Contact</web-resource-name>
            <description/>
            <url-pattern>/identity/contact/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Users</web-resource-name>
            <description/>
            <url-pattern>/identity/users/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>MeasureUnits</web-resource-name>
            <description/>
            <url-pattern>/identity/measure/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>administrator</role-name>
            <role-name>z_manager</role-name>
            <role-name>z_dispatcher</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>myrealm</realm-name>
    </login-config>
    <security-role>
        <description/>
        <role-name>administrator</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>z_manager</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>z_dispatcher</role-name>
    </security-role>
</web-app>
